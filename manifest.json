{
    "manifest_version": 3,
    "name": "SMN: Transkrypcja spotkań",
    "description": "Transkrypcja i podsumowanie twoich spotkań",
    "version": "2.0.5",

    "permissions": [
      "activeTab", 
      "tabCapture",
      "offscreen",
      "scripting",
      "storage",
      "desktopCapture",
      "tabs"
    ],

    "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"],
          "run_at": "document_idle"
      }
  ],
    "host_permissions": [
      "http://*/",
      "https://*/*"
    ],

    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  